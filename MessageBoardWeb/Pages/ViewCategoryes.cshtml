@page "{SelectedCategoryId:int?}"
@model MessageBoardWeb.Pages.ViewCategoryesModel

<div class="container">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                @if (Model.MessagesList != null)
                {
                    <table class="table table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Content</th>
                        </tr>
                        @foreach (var Message in Model.MessagesList)
                        {
                            <tr>
                                <td>@Message.Title</td>
                                <td>@Message.Content </td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>
